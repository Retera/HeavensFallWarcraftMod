//===========================================================================
// Specifies harvesting priorities for workers
//===========================================================================
function HarvestPriorities takes nothing returns nothing
    local integer mine = TownWithMine()
    local integer allGold = GetUnitCountDone('h02Z') + GetUnitCountDone('h03E')
    local integer allWood = GetUnitCountDone('h02Z')
    local integer numWorkers
    set numWorkers = 5
    call HarvestGold( TownWithMine(), numWorkers )
    set numWorkers = 5
    call HarvestWood( 0, numWorkers )
    if (( TownHasMine( 1 ) == true )) then
        set numWorkers = 5
        call HarvestGold( 1, numWorkers )
    endif
    set numWorkers = 4
    call HarvestWood( 0, numWorkers )
    if (( TownHasMine( 2 ) == true )) then
        set numWorkers = 5
        call HarvestGold( 2, numWorkers )
    endif
    if (( TownHasMine( 3 ) == true )) then
        set numWorkers = 5
        call HarvestGold( 3, numWorkers )
    endif
endfunction

